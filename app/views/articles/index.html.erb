<div class="mx-auto text-center">
  <h1 class="text-5xl mb-2 mx-auto">Awesome Articles!</h1>
  <p class="text-xl mb-8 italic mx-auto"> Where the best news of the internet comes to die!</p>
  <%= link_to 'New Article', new_article_path, class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-4 px-8 rounded" %>
  <br>
  <br>
</div>
 
<table align="center">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  
  <% @articles.each do |article| %>
    <tr>
      <td class="p-1"><%= article.title %></td>
      <td class="w-8/12 p-3"><%= article.content %></td>
    </tr>
    <tr class="p-1">
      <td class="p-1">
        <%= link_to 'Show', article_path(article) %> | 
        <%= link_to 'Edit', edit_article_path(article) %> |  
        <%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this article?' } %>
        <br>
        <br>
      </td>
    </tr>
  <% end %>
</table>
